.topheader
  .topheader__lists
    .topheader__lists__upper
      .topheader__lists__upper__name
        %h1
        = image_tag "logo/logo.png", size: '140x42';
      .topheader__lists__upper__search
        .topheader__lists__upper__search__input
          = form_with model: @item do |form|
            = form.text_field :name, class: 'topheader__lists__upper__search__input__keyword',placeholder: "キーワードから探す"
        .topheader__lists__upper__search__btn
          = image_tag "icon/icon-search 1.png", size: '20x20';
    .topheader__lists__low
      .topheader__lists__low__select
      
        .category
          = link_to "カテゴリー", class: "category__tab"
          .categories
            %ul.categories__list
              - @category_parent.each do |category|
                %li.categories__list--category-name
                  = category[:name]
            %ul.categories__list
              - @category_children.each do |category|
                %li.categories__list--category-name
                  = category[:name]
            %ul.categories__list
              - @category_grandchild.each do |category|
                %li.categories__list--category-name
                  = link_to "#{category[:name]}"


        .topheader__lists__low__select__brand
          =link_to 'ブランド' ,class: "topheader__lists__low__select__brand__tab"
      .topheader__lists__low__user
        - if user_signed_in?
          .topheader__lists__low__user__logout
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "topheader__lists__low__user__logout--tab"
        - else
          .topheader__lists__low__user__login
            = link_to "ログイン", new_user_session_path, method: :get, class: "topheader__lists__low__user__login--tab"
          .topheader__lists__low__user__register
            = link_to "新規会員登録", new_user_registration_path, method: :delete, class: "topheader__lists__low__user__register--tab"
