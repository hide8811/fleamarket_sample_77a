.body
  
  = render "users/header"
  
  .form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form|
   
      
      .form__title
        会員情報入力
       
      .form__main
        .form__main__user-title
          ユーザー情報
        .form__main__nickname
          %label.form__main__nickname__title
            ニックネーム
          %span.form__main__nickname__required
            必須
          = form.text_field :nickname, class: 'form__main__nickname__form'
          

          
        .form__main__mail
          %label.form__main__mail__title
            メールアドレス
          %span.form__main__mail__required
            必須
          = form.text_field :email, class: 'form__main__mail__form'
         
        .form__main__password
          %label.form__main__password__title
            パスワード
          %span.form__main__password__required
            必須
          = form.text_field :password, class: 'form__main__password__form'

        .form__main__password-confirmation
          %label.form__main__password-confirmation__title
            確認パスワード
          %span.form__main__password-confirmation__required
            必須
          = form.text_field :password_confirmation, class: 'form__main__password-confirmation__form'

        
    
        
        .form__main__person-title
          本人確認情報
        .form__main__name
          %label.form__main__name__title
            お名前（全角）
          %span.form__main__name__required
            必須
          .form__main__name__form
            = form.text_field :family_name, class: 'form__main__name__form__family'
            = form.text_field :first_name, class: 'form__main__name__form__first'
          
        .form__main__name-kana
          %label.form__main__name-kana__title
            お名前かな（全角）
          %span.form__main__name-kana__required
            必須
          .form__main__name-kana__form
            = form.text_field :family_name_kana, class: 'form__main__name-kana__form__family'
            = form.text_field :first_name_kana, class: 'form__main__name-kana__form__first'
            

        .form__main__birthday
          %label.form__main__birthday__title
            生年月日
          %span.form__main__birthday__required
            必須
          .form__main__birthday__form
            != sprintf(form.date_select(:birthday, with_scss_classes:'form__main__birthday__form', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
           
        = fields_for @destination do |d|
          
          .form__main__destination-title
            商品送付先住所情報

          .form__main__destination-name
            %label.form__main__destination-name__title
              送付先氏名（全角）
            %span.form__main__destination-name__required
              必須
            .form__main__destination-name__form
              = d.text_field :family_name, class: 'form__main__destination-name__form__family'
              = d.text_field :first_name, class: 'form__main__destination-name__form__first'
            

          .form__main__destination-kana
            %label.form__main__destination-kana__title
              送付先氏名かな（全角）
            %span.form__main__destination-kana__required
              必須
            .form__main__destination-kana__form
              = d.text_field :family_name_kana, class: 'form__main__destination-kana__form__family'
              = d.text_field :first_name_kana, class: 'form__main__destination-kana__form__first'
              

          .form__main__postalcode
            %label.form__main__postalcode__title
              郵便番号
            %span.form__main__postalcode__required
              必須
            = d.text_field :postal_code, class: 'form__main__postalcode__form'

          .form__main__prefecture
            %label.form__main__prefecture__title
              都道府県
            %span.form__main__prefecture__required
              必須
            
            = d.select :prefecture, [ "北海道", "東京", "大阪", "愛知", "沖縄" ], {prompt: "選択してください"}, {class: 'form__main__prefecture__form'}

          .form__main__city
            %label.form__main__city__title
              市区町村
            %span.form__main__city__required
              必須
            = d.text_field :city, class: 'form__main__city__form' 
              
          
          .form__main__address
            %label.form__main__address__title
              番地
            %span.form__main__address__required
              必須
            = d.text_field :address, class: 'form__main__address__form' 
              
            
          .form__main__after-adress
            %label.form__main__after-adress__title
              マンション名やビル名、部屋番号
            %span.form__main__after-adress__required
              任意
            = d.text_field :after_address, class: 'form__main__after-adress__form' 
            

          .form__main__phone
            %label.form__main__phone__title
              お届け先電話番号
            %span.form__main__phone__required
              任意
            = d.text_field :phone, class: 'form__main__phone__form' 

            

      
        
          = form.submit "登録", class: 'form__main__btn'
         
  = render "users/footer"


